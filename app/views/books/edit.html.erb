<h1>Editing Book</h1>


<!-- errorメッセージの処理-->
<% if @book.errors.any? %>
  <div class="error_messages">
    <!-- エラーメッセージ（header部分） -->
    <div class="error_head">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </div>

    <!-- エラーメッセージ（body部分） -->
    <ul class="error_body">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_for(@book) do |f| %>

<div class="edit_content">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="edit_content">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

  <%= f.submit %>
<% end %>


<!-- リンク先 -->
<p>
  <%= link_to 'Show',book_path(@book)%> |
  <%= link_to 'Back',books_path %>
</p>
